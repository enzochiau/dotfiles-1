# ------------------------------------
# General
# ------------------------------------
alias mv='mv -i'
alias cp='cp -i'
alias rm='rm -i'
alias df='df -h'
alias du='du -h'
alias lv8='lv -Ou8'
alias man='env LANG=ja_JP.UTF-8 /usr/bin/man'


# ------------------------------------
# Git
# ------------------------------------
alias gs='git status'
alias au='git add -u; git status'
alias gg='git status'
alias gb='git branch'
alias gd='git diff'
alias gp='git push'


# ------------------------------------
# Own definition
# ------------------------------------
alias rr='rm -f *~'
alias u='cd ..'
alias uu='cd ../..'
alias uuu='cd ../../..'
alias uuuu='cd ../../../..'


